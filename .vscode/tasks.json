{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C++: Build active file",
			"args": [
				"-fdiagnostics-color=always",
				"-static-libgcc",
				"-static-libstdc++",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"command": "g++",
			"osx": {
				"command": "g++-13"
			},
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build"
			},
			"presentation": {
				"panel": "shared",
				"reveal": "silent",
				"showReuseMessage": false
			}
		},
		{
			"type": "shell",
			"label": "C++: Run active file",
			"dependsOn": [
				"C++: Build active file"
			],
			"dependsOrder": "sequence",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "shared",
				"showReuseMessage": true,
				"focus": true
			}
		}
	]
}